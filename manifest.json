{
  "manifest_version": 3,
  "name": "番茄钟",
  "version": "1.0",
  "description": "一个简单的番茄钟 Chrome 扩展",
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["float.css"],
      "js": ["float.js"]
    }
  ]
}